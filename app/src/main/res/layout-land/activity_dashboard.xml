<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_get_quotes"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.Button"
                android:textColor="@color/button_color_text"
                android:onClick="launchExplicitIntent"
                android:text="@string/name_get_quotes" />

            <Button
                android:id="@+id/b_fav_quotes"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.Button"
                android:textColor="@color/button_color_text"
                android:onClick="launchExplicitIntent"
                android:text="@string/name_fav_quotes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.Button"
                android:textColor="@color/button_color_text"
                android:layout_weight="1"
                android:onClick="launchExplicitIntent"
                android:text="@string/name_settings" />

            <Button
                android:id="@+id/b_about"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button"
                android:textColor="@color/button_color_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="launchExplicitIntent"
                android:text="@string/name_about" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>